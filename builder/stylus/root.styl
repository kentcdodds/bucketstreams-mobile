.auth-background
  img
    min-width 100%
    max-height 100%
    position fixed
    top 0
    left -130px

@media screen and (min-width: 600px)
  .auth-background
    img
      left 0px

.login-form-container
  z-index 1
  position absolute
  color #FFF
  width 100%
  top 10%
  text-align center
  text-shadow 0 0 10px #000, 0 0 10px #000
  h1, h2
    color #FFF
  .login-form
    margin-top 40px
    .left-button
      float left
    .right-button
      float right
      padding-left 28px
      padding-right 28px
.trouble-button
  position absolute
  bottom 0
  left 0
  margin-left 10px
  margin-bottom 10px